{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "extends": ["@oidoid/config/biome"],
  "linter": {
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "warn",
          "options": {
            "paths": {
              "@oidoid/void": {
                "allowImportNames": ["*"],
                "message": "use a namespace import: `import * as V from '@oidoid/void'`."
              }
            }
          }
        }
      }
    }
  }
}
