{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/oidoid/super-patience/refs/heads/main/src/level/level-file.json",
  "allOf": [{"$ref": "https://oidoid.github.io/void/level-file.v0.json"}],
  "$defs": {
    "Board": {"type": "object", "description": "board config."},
    "Ent": {
      "allOf": [
        {
          "$ref": "https://oidoid.github.io/void/level-file.v0.json#/$defs/Ent"
        },
        {
          "type": "object",
          "properties": {
            "board": {
              "$ref": "#/$defs/Board",
              "unevaluatedProperties": false
            },
            "patienceTheDemon": {
              "$ref": "#/$defs/PatienceTheDemon",
              "unevaluatedProperties": false
            },
            "pile": {"$ref": "#/$defs/Pile", "unevaluatedProperties": false},
            "tally": {"$ref": "#/$defs/Tally", "unevaluatedProperties": false}
          }
        }
      ],
      "$comment": "to-do: `\"$dynamicAnchor\": \"Ent\"`."
    },
    "Pile": {
      "type": "object",
      "description": "pile config.",
      "properties": {
        "type": {"description": "pile type.", "enum": ["Waste"]}
      }
    },
    "PatienceTheDemon": {
      "type": "object",
      "description": "Patience the Demon config."
    },
    "Tag": {
      "$ref": "https://oidoid.github.io/void/level-file.v0.json#/$defs/Tag",
      "$comment": "to-do: `\"$dynamicAnchor\": \"Tag\"` and populate tags from tools/void.ts."
    },
    "Tally": {"type": "object", "description": "tally config."}
  },
  "unevaluatedProperties": false,
  "properties": {
    "ents": {
      "allOf": [
        {
          "$ref": "https://oidoid.github.io/void/level-file.v0.json#/properties/ents"
        }
      ],
      "items": {
        "$dynamicRef": "#Ent",
        "$ref": "#/$defs/Ent",
        "$comment": "to-do: delete root properties once dynamic refs are supported.",
        "unevaluatedProperties": false
      }
    }
  }
}
